<!DOCTYPE html>
<html lang="en">

<%- include('partials/head', {title: "Add Item"}); %>

<body class="d-flex flex-column min-vh-100">

    <%- include('partials/header', {msg: "This page is where you can add a new item."}); %>

    <section class="container pt-5 pb-5" style="margin-top: 160px;">
        <div class="container mt-1 pt-1 pb-5">
            <h2>Inventory Management Form</h2>
            <form class="bg-light p-4 border rounded" action="/items" method="POST">

                <div class="row mb-3">
                    <label for="_uuid" class="col-sm-2 col-form-label">ItemID:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control form-control-plaintext" id="_uuid" name="_uuid" value=<%= _uuid %> readonly>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="createdAt" class="col-sm-2 col-form-label">Date Added:</label>
                    <div class="col-sm-10">
                        <!-- For date formatting -->
                        <% 
                        const currentDate = new Date();
                        const options = { 
                                weekday: 'short', 
                                year: 'numeric', 
                                month: 'short', 
                                day: 'numeric', 
                                hour: '2-digit', 
                                minute: '2-digit', 
                                timeZoneName: 'short' 
                            };
                        %>
                        <input type="datetime" class="form-control form-control-plaintext" id="createdAt" name="createdAt" value="<%= currentDate.toLocaleDateString('en-US', options) %>" readonly>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="name" class="col-sm-2 col-form-label">Item Name:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="name" name="name" value="" required>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="category" class="col-sm-2 col-form-label">Category:</label>
                    <div class="col-sm-10">
                        <select class="form-select" id="category" name="category" required>
                            <option value="" disabled selected>Select a category</option>
                            <option value="Electronics">Electronics</option>
                            <option value="Clothing and Apparel">Clothing and Apparel</option>
                            <option value="Food and Beverages">Food and Beverages</option>
                            <option value="Furniture and Home Goods">Furniture and Home Goods</option>
                            <option value="Health and Beauty Products">Health and Beauty Products</option>
                            <option value="Others">Others</option>
                        </select>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="quantity" class="col-sm-2 col-form-label">Quantity:</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="quantity" name="quantity" min="1" value="" required>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="price" class="col-sm-2 col-form-label">Price (PHP):</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="price" name="price" step="0.01" min="0" value="" required>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="description" class="col-sm-2 col-form-label">Description:</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" id="description" name="description" rows="4"></textarea>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-10 offset-sm-2"> 
                        <input type="submit" class="btn btn-outline-dark" value="Add to Inventory">
                        <!-- <button type="submit" class="btn btn-secondary">Add Item</button> -->
                        <a href="/" class="btn btn-outline-dark">Go Back</a>
                    </div>
                </div>

            </form>
        </div>
    </section>

    <%- include('partials/footer'); %>

    <!-- Script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>


